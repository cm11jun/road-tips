<div class= "container">
  <h1>Trips</h1>

<div class="poi-icons row">
  <div class="d-flex justify-content-between poi-icons-links">
    <i class="fa-solid fa-road fa-4x"></i>
    <i class="fa-solid fa-camera fa-4x"></i>
    <i class="fa-solid fa-bed fa-4x"></i>
    <i class="fa-solid fa-utensils fa-4x"></i>
  </div>
</div>


      <div class="row">
      <% @trips.each do |trip| %>
        <div class="col-sm-4">
            <div class="card-trip flex mb-3">
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= image_path "scotland-wallpaper.jpg" %>')">
              </div>
                <div class="container card-category-infos pt-1">
                  <h4><%= link_to trip.title, trip_path(trip), class: "card-category-h4 link-dark text-decoration-none" %></h4>
                  <p><strong>Start: </strong><%= trip.start_point %></p>
                  <p><strong>End: </strong><%= trip.end_point %></p>
                  <p><strong>Region: </strong> <%= trip.region %></p>
                </div>
            </div>
        </div>
      <% end %>
    </div>
</div>


<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with <i class="fas fa-heart"></i> at Le Wagon
  </div>
</div>
