          var map = new mapboxgl.Map({
            container: 'map',
            style: 'mapbox://styles/mapbox/streets-v11',
            center: <%= @start_coords %>,
            zoom: 10
          });


          var directions = new MapboxDirections({
            accessToken: 'pk.eyJ1IjoiY20xMWp1biIsImEiOiJjbGVvbzZxb28wNDdmM3VvMTBqeXVub2trIn0.6YeYXqBNO0iFTo6kMuTM-w',
            unit: 'metric',
            profile: 'mapbox/driving'
          });
          map.addControl(directions, 'top-left');
          map.on('load', function() {
          directions.setOrigin(<%= @start_coords %>); // On load, set the origin to "Toronto, Ontario".
          directions.setDestination(<%= @end_coords %>); // On load, set the destination to "Montreal, Quebec".
          });
        </script>

        <% if @waypoint1 %>
          <script>
            directions.addWaypoint(0, <%= @waypoint1 %> );
          </script>
        <% end %>

        <% if @waypoint2 %>
          <script>
            directions.addWaypoint(1, <%= @waypoint2 %> );
          </script>
        <% end %>

        <% if @waypoint3 %>
          <script>
            directions.addWaypoint(2, <%= @waypoint3 %> );
          </script>
        <% end %>

        <% if @waypoint4 %>
          <script>
            directions.addWaypoint(3, <%= @waypoint4 %> );
