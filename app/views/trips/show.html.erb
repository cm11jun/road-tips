      <% if @trip.photos.attached? %>
        <div class="wrapper">
          <% unless @trip.photos.first.nil?%>
            <div class="item">
              <div class="polaroid">
                <%= cl_image_tag @trip.photos.first.key %>
              </div>
            </div>
          <% end %>
          <% unless @trip.photos.second.nil?%>
            <div class="item">
              <div class="polaroid">
                <%= cl_image_tag @trip.photos.second.key %>
              </div>
            </div>
          <% end %>
          <% unless @trip.photos.third.nil?%>
            <div class="item">
              <div class="polaroid">
                <%= cl_image_tag @trip.photos.third.key %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="wrapper">
            <div class="item">
              <div class="polaroid"><%= image_tag "scotland-wallpaper.jpg" %>
                <%# <div class="caption"><h5>Sunset on the beach</h5></div> %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-sm-6">
          <div class="card-background my-3 px-3 py-3">
            <h3><strong>Reviews</strong></h3>
            <div class="row">
              <div class="col-xs-4">
                <%= simple_form_for [@trip, @review] do |f| %>
                  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
                  <%= f.input :content %>
                  <%= f.submit "Add Review", class: "btn btn-flat mb-2"  %>
                <% end %>
              </div>
            </div>
            <div>
              <% if @trip.reviews.count > 0 %>
                <h3>User Reviews</h3>
                <ul class="list-group list-unstyled">
                  <% @trip.reviews.each do |review| %>
                    <div>
                      <li class="star-rating">
                        <% if review.rating %>
                          <%= '★' * review.rating %>
                        <%end%>
                      </li>
                      <li class="list-group-item-borderless"><strong><%= review.user.username %></strong>, <i><%= review.created_at.strftime("%b %d, %Y") %></i></li>
                      <li class="list-group-item-borderless mb-3"><%= review.content %></li>
                    </div>
                    <%# <%= link_to "Delete", review_path(review), class: "link text-decoration-none", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
                  <% end %>
                </ul>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card-background my-3 px-3 py-3">
            <%# <% if @trip.user.bookings %>
            <%# <h2>You booked this trip on <%= @booking.created_at.strftime("%d/%m/%Y") %>
            <%# <p><strong>Start date: </strong> <%= @booking.start_date.strftime("%d/%m/%Y") %>
            <%# <p><strong>End date: </strong> <%= @booking.end_date.strftime("%d/%m/%Y") %>
            <%# <% else %>
            <%# <h2>Book this trip</h2> %>
            <br>
            <%= simple_form_for [@trip, @booking] do |f| %>
              <%= f.input :start_date, as: :string, input_html: { data: { controller: "flatpickr" } } %>
              <%= f.input :end_date, as: :string, input_html: { data: { controller: "flatpickr" } } %>
              <%= f.submit 'Book Trip', class: "btn btn-flat"%>
            <% end %>
            <%# <% end %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card-background my-3 px-3 py-3">
            <div>
              <% @pois.each do |poi|%>
                <h2 class="my-1"><strong><%= poi.category %></strong></h2>
                <h4 class="my-1"><strong><%= poi.name %></strong></h4>
                <p><strong>Description</strong></p>
                <p><%= poi.description %></p>
                <p><strong>Address</strong></p>
                <p><%= poi.address %></p>
                <br>
              <% end %>
            </div>
          </div>
        </div>
