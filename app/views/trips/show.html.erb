<div class="container">
<br>

<div class="poi-icons row text-center mb-2">
  <div class="d-flex justify-content-between poi-icons-links">

    <figure>
    <i class="fa-solid fa-bridge-water fa-3x"></i>
    <figcaption>Scenic Roads</figcaption>
    </figure>

    <figure>
    <i class="fa-solid fa-flag-checkered fa-3x"></i>
    <figcaption>Fun Roads</figcaption>
    </figure>

    <figure>
    <i class="fa-solid fa-camera fa-3x"></i>
    <figcaption>Sights</figcaption>
    </figure>

    <figure>
    <i class="fa-brands fa-fort-awesome fa-3x"></i>
    <figcaption>Landmarks</figcaption>
    </figure>

    <figure>
    <i class="fa-solid fa-bed fa-3x"></i>
    <figcaption>Hotels</figcaption>
    </figure>

    <figure>
    <i class="fa-solid fa-utensils fa-3x"></i>
    <figcaption>Restaurants</figcaption>
    </figure>

    <figure>
    <i class="fa-solid fa-gas-pump fa-3x"></i>
    <figcaption>Services</figcaption>
    </figure>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <div class="card-trip flex mb-3">
      <div class="card">
        <%= image_tag "scotland-wallpaper.jpg" %>
      </div>
    </div>
  </div>


<div class="col-sm-6 card-trip flex-end mb-3">
  <div class="card-trip-infos py-2">
    <div>
      <h2><%= @trip.title %></h2>
      <p><strong>From: </strong><%= @trip.start_point %></p>
      <p><strong>To: </strong><%= @trip.end_point %></p>
      <p><strong>Region: </strong> <%= @trip.region %></p>
      <p><strong>Summary: </strong> <%= @trip.summary %></p>
      <%= link_to "Edit Trip", edit_trip_path(@trip), class: "btn btn-success" %>
      <%= button_to "Delete Trip", trip_path(@trip), class: "btn btn-danger", method: :delete, confirm: "Are you sure?"%>
    </div>

  </div>
  <div>
  <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
</div>
</div>

<div class="card-trip my-3">
  <h3><strong>Reviews</strong></h3>
  <p><%= link_to "Add review", new_trip_review_path(@trip), class: "btn btn-flat mb-3" %></p>
  <ul class="list-group list-unstyled">
    <% @trip.reviews.each do |review| %>
      <li class="star-rating"> Rating: <%= review.rating %></li>
        <% if review.rating %>
          <%= '⭐️' * review.rating %>
        <%end%>
      <li class="list-group-item"><%= review.content %></li>
      <%# <%= link_to "Delete", review_path(review), class: "link text-decoration-none", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    <% end %>
  </ul>
</div>
</div>

